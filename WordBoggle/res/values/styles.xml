<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="letterText" parent="@android:style/TextAppearance">
        <item name="android:textSize">1sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#0099FF</item>
    </style>
    
    <style name="normalText_XS" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="normalText_S" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="normalText_M" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="normalText_L" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="normalText_XL" parent="@android:style/TextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="scoreText">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">12sp</item>
	</style>
    
    <style name="scoreText_XS">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">10sp</item>
	</style>
	
    <style name="scoreText_S">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">14sp</item>
	</style>
	
    <style name="scoreText_M">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">18sp</item>
	</style>
	
    <style name="scoreText_L">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">22sp</item>
	</style>

    <style name="scoreText_XL">
    	<item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
    	<item name="android:textSize">26sp</item>
	</style>
    
  </resources>
