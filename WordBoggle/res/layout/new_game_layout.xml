<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical" >
    
    <com.example.wordboggle.SquareLayout  
        android:id="@+id/SquareLayout"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginRight="20dp"
    	android:layout_marginLeft="20dp"
    	>
    	
		<TableLayout
		    android:id="@+id/GridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4" 
            android:shrinkColumns="*"  
            android:stretchColumns="*">

            <!-- Row 1 -->
            <TableRow
            	android:id="@+id/Row0"
                android:layout_width="match_parent"
         		android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <com.example.wordboggle.SquareTextView
                	android:id="@+id/Point00"
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/grida"
                    android:gravity="center"/>
                            
				<com.example.wordboggle.SquareTextView
                	android:id="@+id/Point01"
                    android:layout_width="0dip"
         			android:layout_height="match_parent" 
                    android:layout_weight="1"
                    android:background="@drawable/gridb" 
                    android:gravity="center"/>

				<com.example.wordboggle.SquareTextView
                    android:id="@+id/Point02" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1" 
                    android:background="@drawable/gridc"
                    android:gravity="center"/>

				<com.example.wordboggle.SquareTextView
                    android:id="@+id/Point03" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridd"
                    android:gravity="center"/>


			</TableRow>
         
            <!-- Row 2 -->
			<TableRow
                android:id="@+id/Row1"
                android:layout_width="match_parent"
         		android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point10"
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gride"
                    android:gravity="center"/>
                            
				<com.example.wordboggle.SquareTextView
                	android:id="@+id/Point11"
                    android:layout_width="0dip"
         			android:layout_height="match_parent" 
                    android:layout_weight="1"
                    android:background="@drawable/gridf"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point12" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1" 
                    android:background="@drawable/gridg"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point13" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridh"
                    android:gravity="center"/>
                        
			</TableRow>
               
			
            <!-- Row 3 -->
            <TableRow
            	android:id="@+id/Row2"
               	android:layout_width="match_parent"
         		android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

				<com.example.wordboggle.SquareTextView
                	android:id="@+id/Point20"
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridi"
                    android:gravity="center"/>
                            
				<com.example.wordboggle.SquareTextView
                    android:id="@+id/Point21"
                    android:layout_width="0dip"
         			android:layout_height="match_parent" 
                    android:layout_weight="1"
                    android:background="@drawable/gridj"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point22" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1" 
                    android:background="@drawable/gridk"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point23" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridl"
                    android:gravity="center"/>
                            
			</TableRow>
                        
                
            <!-- Row 4 -->
            <TableRow
                android:id="@+id/Row3"
                android:layout_width="match_parent"
         		android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point30"
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridm"
                    android:gravity="center"/>
                            
                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point31"
                    android:layout_width="0dip"
         			android:layout_height="match_parent" 
                    android:layout_weight="1"
                    android:background="@drawable/gridn"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point32" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1" 
                    android:background="@drawable/grido"
                    android:gravity="center"/>

                <com.example.wordboggle.SquareTextView
                    android:id="@+id/Point33" 
                    android:layout_width="0dip"
         			android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gridp"
                    android:gravity="center"/>

			</TableRow>
                         
		</TableLayout>
        
	</com.example.wordboggle.SquareLayout>
    
    <TableLayout
        android:id="@+id/UserLayout"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="5dp">
 
    	<TableRow
    	    android:id="@+id/ColumnLayout"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_weight="1">
    	    
    	    
      		<!-- Column 1 -->
      	<RelativeLayout 
         		android:id="@+id/ButtonLayout"
         		android:layout_width="0dp"
         		android:layout_height="match_parent"
         		android:layout_weight="2">
      		    
      		    <TextView
         			android:id="@+id/WordView"
         			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:layout_alignParentTop="true"
        			android:gravity="center"
         			android:text=""
         			android:textSize="12sp" />
      		    
      		    <LinearLayout 
    				android:id="@+id/TimeLayout"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_below="@id/WordView"
    				android:layout_alignParentLeft="true"
    				android:orientation="horizontal" >
      		    
      		    	<TextView
                		android:id="@+id/TimeCount"
                		android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
                		android:text="00:00"
               			android:textSize="12sp" />
      		    		    
      		    	<ImageView
      			    	android:id="@+id/imageView1"
      			    	android:layout_width="wrap_content"
      			    	android:layout_height="wrap_content"
      			    	/>
      		
      		    </LinearLayout>
      		    
      		    
      		    <Button
      				android:id="@+id/NewGameBtn"
      				android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:layout_below="@id/TimeLayout"
        			android:layout_alignParentLeft="true"
        			android:gravity="center"
      				android:text="New Game" 
      				android:textSize="15sp"
      				android:onClick="onClickNewGame"/>
      			
      			<Button
                	android:id="@+id/SubmitScoreBtn"
                	android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:layout_below="@id/NewGameBtn"
        			android:layout_alignParentLeft="true"
        			android:gravity="center"
                	android:text="Submit" 
                	android:textSize="15sp"
                	android:onClick="onClickSubmitScore"/>

      			<LinearLayout 
    				android:id="@+id/TotalLayout"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_alignParentLeft="true"
    				android:layout_below="@+id/SubmitScoreBtn"
    				android:orientation="horizontal" >

      			<!-- 	<TextView
      			    	android:id="@+id/total"
      			    	android:layout_width="wrap_content"
      			    	android:layout_height="wrap_content"
      			    	android:text=""
      			    	android:textSize="12sp" /> -->
      			
      			</LinearLayout>

      			
      			<Button
      			    android:id="@+id/MenuBtn"
      			    android:layout_width="wrap_content"
      			    android:layout_height="wrap_content"
      			    android:layout_alignParentLeft="true"
      			    android:layout_alignParentRight="true"
      			    android:layout_below="@+id/SubmitScoreBtn"
      			    android:gravity="center"
                	android:text="Menu" 
                	android:textSize="15sp"
                	android:onClick="onClickMenu" />
      			
      		</RelativeLayout >
      		
      		
      		<!-- Column 2 -->
      		<ScrollView
                android:id="@+id/ScrollView01"
                android:layout_width="0dp"
                android:layout_height="match_parent" 
                android:layout_weight="3">

                <TableLayout
                    android:id="@+id/TableLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CCFF66"
                    android:stretchColumns="0,1" >

                    <TableRow
                        android:id="@+id/TableRow01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/WordList01"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="#CCCC00"
                            android:gravity="center"
                            android:text="User List"
                            android:textSize="12sp" >
                        </TextView> 

                        <TextView
                            android:id="@+id/PointList01"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#CCCC00"
                            android:text="Pts"
                            android:textSize="12sp" >
                        </TextView> 
                        
                    </TableRow>
                    
                </TableLayout>
                
            </ScrollView>
      		
      		
      		<!-- Column 3 -->
      		<ScrollView
                android:id="@+id/ScrollView02"
                android:layout_width="0dp"
                android:layout_height="match_parent" 
                android:layout_weight="3">

                <TableLayout
                    android:id="@+id/TableLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFCC"
                    android:stretchColumns="0,1" >

                    <TableRow
                        android:id="@+id/TableRow02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                         <TextView
                            android:id="@+id/WordList02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="#CC99FF"
                            android:gravity="center"
                            android:text="Word List"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/PointList02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#CC99FF"
                            android:text="Pts"
                            android:textSize="12sp" >
                        </TextView>
                        
                    </TableRow>
                    
                </TableLayout>
                
            </ScrollView>
      		
    	</TableRow>
    	
	</TableLayout>

</LinearLayout>
